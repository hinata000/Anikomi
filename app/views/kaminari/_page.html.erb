<% if page.current? %>
  <li class="page current">
    <%= link_to_if page.current?, page, url, {remote: remote, rel: page.rel, class: "z-10 px-3 py-2 leading-tight text-primary-content bg-primary !leading-none" } %>
  </li>
<% else %>
  <li class="page">
    <%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel, class: "px-3 py-2 leading-tight text-neutral-content bg-neutral hover:bg-neutral-focus hover:text-neutral-content !leading-none" } %>
  </li>
<% end %>
